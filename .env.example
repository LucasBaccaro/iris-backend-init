# ===================================
# IRIS Backend - Environment Variables
# ===================================

# Application
APP_NAME="IRIS Backend API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"
HOST="0.0.0.0"
PORT=8000

# Supabase Configuration
SUPABASE_URL="your-supabase-project-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Database (opcional, ya que usamos Supabase)
DATABASE_URL="postgresql://user:password@localhost:5432/iris_db"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL="DEBUG"

# Email (para notificaciones futuras)
SMTP_SERVER=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""

# Redis (para cachï¿½ futuro)
REDIS_URL="redis://localhost:6379"

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Timezone
DEFAULT_TIMEZONE="America/Argentina/Buenos_Aires"